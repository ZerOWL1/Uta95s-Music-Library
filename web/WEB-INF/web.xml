<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>
            index
        </welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>RouterIndex</filter-name>
        <filter-class>Filter.RouterIndex</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RouterIndex</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>HttpSessionListener</description>
        <listener-class>Listener.SessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>IndexControl</servlet-name>
        <servlet-class>Controller.IndexControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagementControl</servlet-name>
        <servlet-class>Controller.ManagementControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteControl</servlet-name>
        <servlet-class>Controller.DeleteControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexControl</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagementControl</servlet-name>
        <url-pattern>/manage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteControl</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>edit</servlet-name>
        <jsp-file>contact.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>edit</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
